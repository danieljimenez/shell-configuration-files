IdentityFile ~/.ssh/id_rsa
Include ~/.ssh/config.d/*

# VCS repos 
Host github.com
    User git
    Port 22
    ForwardAgent no
Host gist.github.com
    User git
    Port 22
    ForwardAgent no
    StrictHostKeyChecking yes
Host bitbucket.org
    User git
    Port 22
    ForwardAgent no
    StrictHostKeyChecking yes
Host git.*
    User git
    Port 22
    ForwardAgent no
    StrictHostKeyChecking yes
Host gist.git.*
    User git
    Port 22
    ForwardAgent no
    StrictHostKeyChecking yes    
Host *
    ForwardAgent yes
